{% extends 'base.html.twig' %}

{% block title %}Location Voiture de Luxe{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <div class="relative h-[70vh] bg-gradient-to-r from-gray-900 to-gray-600">
        <div class="absolute inset-0 bg-black opacity-50"></div>
        <div class="relative container mx-auto px-4 h-full flex items-center">
            <div class="text-white max-w-2xl">
                <h1 class="text-5xl font-bold mb-4">Louez votre voiture de luxe</h1>
                <p class="text-xl mb-8">Découvrez notre collection exclusive de véhicules prestigieux</p>
                <a href="{{ path('app_vehicule_index') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300">
                    Voir nos véhicules
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">Pourquoi nous choisir ?</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <div class="text-indigo-600 mb-4">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Réservation rapide</h3>
                    <p class="text-gray-600">Réservez votre véhicule en quelques clics</p>
                </div>
                
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <div class="text-indigo-600 mb-4">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Service Premium</h3>
                    <p class="text-gray-600">Assistance 24/7 et service personnalisé</p>
                </div>
                
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <div class="text-indigo-600 mb-4">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Prix Compétitifs</h3>
                    <p class="text-gray-600">Les meilleurs tarifs pour le luxe</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Cars Section -->
    <div class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">Nos véhicules populaires</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {% for vehicule in vehicules|slice(0, 3) %}
                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        <img src="{{ asset('images/' ~ vehicule.imageFile) }}" alt="{{ vehicule.Marque }}" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <h3 class="text-xl font-semibold mb-2">{{ vehicule.Marque }}</h3>
                            <p class="text-gray-600 mb-4">{{ vehicule.Description }}</p>
                            <div class="flex justify-between items-center">
                                <span class="text-2xl font-bold text-indigo-600">{{ vehicule.prixJournalier }}€/jour</span>
                                <a href="{{ path('app_vehicule_show', {'id': vehicule.id}) }}" 
                                   class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg">
                                    Réserver
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="bg-indigo-600 py-16">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold text-white mb-4">Prêt à vivre une expérience unique ?</h2>
            <p class="text-white text-xl mb-8">Rejoignez notre communauté de passionnés d'automobiles</p>
            <a href="{{ path('app_register') }}" class="bg-white text-indigo-600 font-bold py-3 px-8 rounded-lg hover:bg-gray-100 transition duration-300">
                S'inscrire maintenant
            </a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/home.js') }}"></script>
{% endblock %}